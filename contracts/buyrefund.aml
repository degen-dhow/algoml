token CAFE = 0xcafe

glob int roundLimit

Create create(int roundLimit) {
    glob.roundLimit = roundLimit
}

OptIn optin() {}

@pay $algoAmount ALGO : sender -> escrow
@pay $cafeAmount CAFE : escrow -> sender
@assert algoAmount*2 == cafeAmount*3 
NoOp buy() {}

@from $sender
@round (, roundLimit)
@pay (, escrow.local)$algoAmount ALGO : escrow -> sender
@pay $cafeAmount CAFE : sender -> escrow
@assert algoAmount*2 == cafeAmount*3 
NoOp refund() {}

@from $sender
@round (roundLimit, )
@close ALGO : escrow -> sender
@close CAFE : escrow -> sender
@from global.Creator
Delete delete() {}
